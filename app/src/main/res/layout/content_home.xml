<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/search_hospital_button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:drawableTop="@drawable/search"
            android:gravity="center"
            android:padding="20dp"
            android:text="Search Hospital"
            android:textColor="#fff" />


        <Button
            android:id="@+id/guidelines_button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:drawableTop="@drawable/medicine"
            android:gravity="center"
            android:padding="20dp"
            android:text="Guidelines"
            android:textColor="#fff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/knowledge_button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:drawableTop="@drawable/ranking"
            android:gravity="center"
            android:padding="20dp"
            android:text="Question &amp; Answer"
            android:textColor="#fff" />


        <Button
            android:id="@+id/vaccination_details_button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:drawableTop="@drawable/suggestion"
            android:gravity="center"
            android:padding="20dp"
            android:text="Vaccine Details"
            android:textColor="#fff" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/search_on_map_button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:drawableTop="@drawable/map_search"
            android:gravity="center"
            android:padding="20dp"
            android:text="Search on Map"
            android:textColor="#fff" />


        <Button
            android:id="@+id/govt_initiatives_button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:drawableTop="@drawable/government_ini"
            android:gravity="center"
            android:padding="20dp"
            android:text="Govt. Initiatives"
            android:textColor="#fff" />


    </LinearLayout>


</LinearLayout>
